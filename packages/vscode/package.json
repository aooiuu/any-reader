{
  "name": "@any-reader/vscode",
  "displayName": "any-reader",
  "description": "摸鱼,自定义规则多站点聚合搜索阅读小说、漫画。包含JS规则解析库和VSCode插件。支持本地小说 TXT、EPUB",
  "icon": "resources/icon.png",
  "version": "1.11.6",
  "publisher": "aooiu",
  "private": true,
  "qna": "https://github.com/aooiuu/any-reader/issues",
  "bugs": {
    "url": "https://github.com/aooiuu/any-reader/issues",
    "email": "aooiu@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aooiuu/any-reader"
  },
  "keywords": [
    "阅读",
    "小说",
    "漫画",
    "摸鱼",
    "reader",
    "eso"
  ],
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:any-reader",
    "onWebviewPanel:any-reader"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "tsup",
    "compile-watch": "tsup --watch src",
    "vscode:prepublish": "tsx ./scripts/publish.cjs",
    "dev": "npm-run-all vscode:prepublish compile-watch",
    "build": "npm-run-all vscode:prepublish compile",
    "pack": "vsce package --no-dependencies"
  },
  "contributes": {
    "commands": [
      {
        "command": "any-reader.search",
        "title": "搜索",
        "icon": "$(search)",
        "category": "any-reader"
      },
      {
        "command": "any-reader.discover",
        "title": "发现页",
        "icon": "$(flame)",
        "category": "any-reader"
      },
      {
        "command": "any-reader.home",
        "title": "首页",
        "icon": "$(home)",
        "category": "any-reader"
      },
      {
        "command": "any-reader.openUrl",
        "title": "打开URL",
        "category": "any-reader"
      },
      {
        "command": "any-reader.openFile",
        "title": "打开文件",
        "category": "any-reader"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "any-reader",
          "title": "any-reader",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "any-reader.openFile",
          "when": "resourceExtname == .epub",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "any-reader": [
        {
          "id": "any-reader-webview",
          "name": "view",
          "type": "webview"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "any-reader.customEditor.epub",
        "displayName": "打开 Epub",
        "selector": [
          {
            "filenamePattern": "*.epub"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": [
      {
        "title": "any-reader",
        "properties": {
          "any-reader.logLevel": {
            "type": "string",
            "enum": [
              "Off",
              "Debug"
            ],
            "default": "Off",
            "description": "修改此配置后需要重启VSCode才会生效"
          }
        }
      }
    ]
  },
  "devDependencies": {
    "@any-reader/core": "workspace:^",
    "@any-reader/shared": "workspace:^",
    "@types/fs-extra": "^11.0.4",
    "@types/vscode": "^1.93.0",
    "@vscode/test-electron": "^2.4.1",
    "easy-post-message": "^0.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.2.0",
    "prettier": "^2.8.8",
    "qs": "^6.13.0",
    "sql.js": "^1.11.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.2",
    "uuid": "^10.0.0"
  },
  "dependencies": {
    "sqlite3": "5.1.6"
  }
}
